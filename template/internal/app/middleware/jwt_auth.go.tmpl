package middleware

import (
	"net/http"

	"{{.Name}}/config"
	"{{.Name}}/pkg/authentication"
	"{{.Name}}/pkg/errors"
	"{{.Name}}/pkg/wrapper"

	"github.com/gin-gonic/gin"
)

// JwtAuthMiddleware validates JWT tokens for protected routes
func JwtAuthMiddleware(config *config.Config) gin.HandlerFunc {
	return func(c *gin.Context) {
		if err := authentication.TokenValid(c, config.JWT); err != nil {
			c.JSON(http.StatusUnauthorized, wrapper.NewErrorResponse(
				errors.NewUnauthorizedError("invalid or missing token"),
			))
			c.Abort()
			return
		}
		c.Next()
	}
}
