# üöÄ {{.Name}} Configuration
# Copy this file to .env and adjust the values for your environment

# üåê Server Configuration
PORT=8080
ENVIRONMENT=development
GIN_MODE=debug
SERVER_URL=localhost

# üóÑÔ∏è Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME={{.Name}}
DB_SSL_MODE=disable
DB_SET_MAX_IDLE_CONNS=10
DB_SET_MAX_OPEN_CONNS=100
DB_SET_CONN_MAX_LIFETIME=1h

# üîê JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_TIME=24h
JWT_REFRESH_EXPIRATION_TIME=168h

# üåç CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,X-XSRF-TOKEN,Accept,Origin,X-Requested-With,Authorization
CORS_EXPOSE_HEADERS=Content-Length,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=48h

# üè≠ Production Settings (set to true for production)
PRODUCTION=false

# üìù Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console

# üê≥ Docker Configuration (optional)
DOCKER_IMAGE={{.Name}}:latest
DOCKER_CONTAINER_NAME={{.Name}}-app
